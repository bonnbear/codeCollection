## 2. GridStack.js ç‰ˆæœ¬

```vue
<!-- GridStackVersion.vue -->
<template>
  <div class="grid-container">
    <div class="toolbar">
      <button @click="toggleMode" :class="{ active: isEditMode }">
        {{ isEditMode ? 'ğŸ”“ ç¼–è¾‘æ¨¡å¼' : 'ğŸ”’ æµè§ˆæ¨¡å¼' }}
      </button>
      <button @click="addItem()" :disabled="!isEditMode">â• æ·»åŠ ç»„ä»¶</button>
      <button @click="saveLayout">ğŸ’¾ ä¿å­˜å¸ƒå±€</button>
      <button @click="loadLayout">ğŸ“‚ åŠ è½½å¸ƒå±€</button>
    </div>

    <!-- GridStack å®¹å™¨ -->
    <div ref="gridRef" class="grid-stack"></div>
  </div>
</template>

<script setup>
import { ref, onMounted, onUnmounted, nextTick } from 'vue'
import { GridStack } from 'gridstack'
import 'gridstack/dist/gridstack.min.css'

// å“åº”å¼çŠ¶æ€
const gridRef = ref(null)
const isEditMode = ref(false)
let grid = null
let itemIdCounter = 3

// åˆå§‹å¸ƒå±€æ•°æ®
const initialLayout = [
  { x: 0, y: 0, w: 2, h: 2, id: '0' },
  { x: 2, y: 0, w: 2, h: 4, id: '1' },
  { x: 4, y: 0, w: 2, h: 5, id: '2' },
]

// åˆ›å»ºç»„ä»¶å†…å®¹ HTML
const createItemContent = (id) => {
  return `
    <div class="grid-item-content">
      <span class="item-title">ç»„ä»¶ ${id}</span>
      <button class="delete-btn" onclick="window.deleteGridItem('${id}')">âœ•</button>
    </div>
  `
}

// åˆå§‹åŒ– GridStack
onMounted(() => {
  grid = GridStack.init({
    column: 12,
    cellHeight: 30,
    float: false,           // è‡ªåŠ¨å †å 
    disableDrag: true,      // åˆå§‹ä¸ºæµè§ˆæ¨¡å¼
    disableResize: true,
    animate: true,
    margin: 5,
  }, gridRef.value)

  // åŠ è½½åˆå§‹å¸ƒå±€
  initialLayout.forEach(item => {
    grid.addWidget({
      x: item.x,
      y: item.y,
      w: item.w,
      h: item.h,
      id: item.id,
      content: createItemContent(item.id)
    })
  })

  // å…¨å±€åˆ é™¤æ–¹æ³•ï¼ˆä¾›å†…éƒ¨æŒ‰é’®è°ƒç”¨ï¼‰
  window.deleteGridItem = removeItem

  // ç›‘å¬å˜åŒ–äº‹ä»¶
  grid.on('change', (event, items) => {
    console.log('å¸ƒå±€å˜åŒ–:', items)
  })
})

onUnmounted(() => {
  if (grid) {
    grid.destroy(false)
  }
  delete window.deleteGridItem
})

// åˆ‡æ¢ç¼–è¾‘/æµè§ˆæ¨¡å¼
const toggleMode = () => {
  isEditMode.value = !isEditMode.value
  
  if (isEditMode.value) {
    // å¯ç”¨æ‹–æ‹½å’Œè°ƒæ•´å¤§å°
    grid.enableMove(true)
    grid.enableResize(true)
  } else {
    // ç¦ç”¨æ‹–æ‹½å’Œè°ƒæ•´å¤§å°
    grid.enableMove(false)
    grid.enableResize(false)
  }
}

// æ·»åŠ æ–°ç»„ä»¶ - ä½¿ç”¨ GridStack è‡ªåŠ¨æ”¾ç½®
const addItem = (width = 2, height = 2) => {
  const id = String(itemIdCounter++)
  
  // GridStack è‡ªåŠ¨æ‰¾åˆ°åˆé€‚ä½ç½® (autoPosition: true)
  grid.addWidget({
    w: width,
    h: height,
    id: id,
    autoPosition: true,  // â­ å…³é”®ï¼šè‡ªåŠ¨æ”¾ç½®
    content: createItemContent(id)
  })
}

// åˆ é™¤ç»„ä»¶
const removeItem = (id) => {
  const el = gridRef.value.querySelector(`[gs-id="${id}"]`)
  if (el) {
    grid.removeWidget(el)
  }
}

// ä¿å­˜å¸ƒå±€åˆ°åç«¯
const saveLayout = async () => {
  // è·å–å½“å‰å¸ƒå±€æ•°æ®
  const layoutData = grid.save(false) // false = ä¸å« content
  
  // è½¬æ¢ä¸ºç®€æ´æ ¼å¼
  const saveData = layoutData.map(item => ({
    id: item.id,
    x: item.x,
    y: item.y,
    w: item.w,
    h: item.h
  }))
  
  try {
    // å®é™…é¡¹ç›®ä¸­æ›¿æ¢ä¸ºçœŸå®çš„ API
    await fetch('/api/layout', {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({ layout: saveData })
    })
    alert('å¸ƒå±€ä¿å­˜æˆåŠŸ!')
  } catch (error) {
    console.error('ä¿å­˜å¤±è´¥:', error)
    // æ¨¡æ‹Ÿä¿å­˜åˆ°æœ¬åœ°
    localStorage.setItem('gridstack-layout', JSON.stringify(saveData))
    alert('å¸ƒå±€å·²ä¿å­˜åˆ°æœ¬åœ°!')
  }
}

// ä»åç«¯åŠ è½½å¸ƒå±€
const loadLayout = async () => {
  try {
    // å®é™…é¡¹ç›®ä¸­æ›¿æ¢ä¸ºçœŸå®çš„ API
    const response = await fetch('/api/layout')
    const data = await response.json()
    
    applyLayout(data.layout)
  } catch (error) {
    console.error('åŠ è½½å¤±è´¥:', error)
    // ä»æœ¬åœ°åŠ è½½
    const saved = localStorage.getItem('gridstack-layout')
    if (saved) {
      applyLayout(JSON.parse(saved))
      alert('ä»æœ¬åœ°åŠ è½½å¸ƒå±€æˆåŠŸ!')
    }
  }
}

// åº”ç”¨å¸ƒå±€æ•°æ®
const applyLayout = (layoutData) => {
  // æ¸…ç©ºç°æœ‰ç»„ä»¶
  grid.removeAll()
  
  // é‡æ–°åŠ è½½
  layoutData.forEach(item => {
    grid.addWidget({
      x: item.x,
      y: item.y,
      w: item.w,
      h: item.h,
      id: item.id,
      content: createItemContent(item.id)
    })
  })
  
  // æ›´æ–° ID è®¡æ•°å™¨
  const maxId = Math.max(...layoutData.map(item => parseInt(item.id) || 0), 0)
  itemIdCounter = maxId + 1
}
</script>

<style>
.grid-container {
  padding: 20px;
}

.toolbar {
  margin-bottom: 20px;
  display: flex;
  gap: 10px;
}

.toolbar button {
  padding: 8px 16px;
  border: 1px solid #ddd;
  border-radius: 4px;
  cursor: pointer;
  background: #fff;
  transition: all 0.2s;
}

.toolbar button:hover {
  background: #f5f5f5;
}

.toolbar button.active {
  background: #4CAF50;
  color: white;
}

.toolbar button:disabled {
  opacity: 0.5;
  cursor: not-allowed;
}

/* GridStack æ ·å¼ */
.grid-stack {
  background: #f0f0f0;
  min-height: 400px;
}

.grid-stack-item-content {
  background: #42b983;
  border-radius: 4px;
}

.grid-item-content {
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}

.delete-btn {
  position: absolute;
  top: 5px;
  right: 5px;
  background: #ff4444;
  color: white;
  border: none;
  border-radius: 50%;
  width: 24px;
  height: 24px;
  cursor: pointer;
  display: none;
}

/* ç¼–è¾‘æ¨¡å¼ä¸‹æ˜¾ç¤ºåˆ é™¤æŒ‰é’® */
.grid-stack.grid-stack-animate .delete-btn {
  display: block;
}

.item-title {
  color: white;
  font-weight: bold;
}
</style>
```

