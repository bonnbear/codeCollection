<body>
    <div id="app">
        <div class="container">
            <collapsible-card
                v-for="card in cards"
                :key="card.id"
                :title="card.title"
                :items="card.items"
                :default-expanded="card.defaultExpanded"
            />
        </div>
    </div>

    <script>
        const { createApp, ref } = Vue;

        const CollapsibleCard = {
            name: 'CollapsibleCard',
            props: {
                title: {
                    type: String,
                    required: true
                },
                items: {
                    type: Array,
                    required: true
                },
                defaultExpanded: {
                    type: Boolean,
                    default: false
                }
            },
            setup(props) {
                const isExpanded = ref(props.defaultExpanded);

                const toggle = () => {
                    isExpanded.value = !isExpanded.value;
                };

                const getNodeStatus = (nodeIndex, currentStep) => {
                    if (nodeIndex < currentStep) {
                        return 'completed';
                    } else if (nodeIndex === currentStep) {
                        return 'active';
                    }
                    return 'pending';
                };

                const getProgressWidth = (currentStep, totalSteps) => {
                    return (currentStep / (totalSteps - 1)) * 100;
                };

                return {
                    isExpanded,
                    toggle,
                    getNodeStatus,
                    getProgressWidth
                };
            },
            template: `
                <div class="card">
                    <div class="card-header" @click="toggle">
                        <h3 class="card-title">{{ title }}</h3>
                        <button class="toggle-btn">
                            <span>{{ isExpanded ? '收起' : '展开' }}</span>
                            <span class="arrow" :class="{ expanded: isExpanded }">▼</span>
                        </button>
                    </div>
                    <div class="card-body" :class="{ collapsed: !isExpanded, expanded: isExpanded }">
                        <div class="progress-item" v-for="item in items" :key="item.id">
                            <div class="item-label">{{ item.label }}</div>
                            
                            <div class="progress-track">
                                <div class="progress-line">
                                    <div 
                                        class="progress-line-fill"
                                        :style="{ width: getProgressWidth(item.currentStep, item.nodes.length) + '%' }"
                                    ></div>
                                </div>
                                
                                <div class="progress-nodes">
                                    <div 
                                        class="node" 
                                        v-for="(node, index) in item.nodes" 
                                        :key="index"
                                    >
                                        <div 
                                            class="node-circle"
                                            :class="getNodeStatus(index, item.currentStep)"
                                        ></div>
                                        <span 
                                            class="node-label"
                                            :class="getNodeStatus(index, item.currentStep)"
                                        >{{ node }}</span>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="status-indicator">
                                <span class="status-dot" :class="item.status"></span>
                                <span class="status-text" :class="item.status">{{ item.statusText }}</span>
                            </div>
                        </div>
                    </div>
                </div>
            `
        };

        createApp({
            components: {
                CollapsibleCard
            },
            setup() {
                const cards = ref([
                    {
                        id: 1,
                        title: '项目开发流程',
                        defaultExpanded: true,
                        items: [
                            { 
                                id: 1, 
                                label: '前端开发', 
                                nodes: ['需求分析', '设计', '开发', '测试', '上线'],
                                currentStep: 2,
                                status: 'running',
                                statusText: '进行中'
                            },
                            { 
                                id: 2, 
                                label: '后端开发', 
                                nodes: ['架构设计', '接口开发', '联调', '部署'],
                                currentStep: 1,
                                status: 'running',
                                statusText: '进行中'
                            },
                            { 
                                id: 3, 
                                label: 'UI设计', 
                                nodes: ['原型', '视觉设计', '交互', '验收'],
                                currentStep: 4,
                                status: 'completed',
                                statusText: '已完成'
                            },
                            { 
                                id: 4, 
                                label: '测试阶段', 
                                nodes: ['单元测试', '集成测试', '压力测试'],
                                currentStep: 0,
                                status: 'pending',
                                statusText: '待启动'
                            }
                        ]
                    },
                    {
                        id: 2,
                        title: '订单处理流程',
                        defaultExpanded: false,
                        items: [
                            { 
                                id: 1, 
                                label: '订单 #12345', 
                                nodes: ['下单', '支付', '发货', '配送', '签收'],
                                currentStep: 3,
                                status: 'running',
                                statusText: '配送中'
                            },
                            { 
                                id: 2, 
                                label: '订单 #12346', 
                                nodes: ['下单', '支付', '发货', '配送', '签收'],
                                currentStep: 5,
                                status: 'completed',
                                statusText: '已完成'
                            },
                            { 
                                id: 3, 
                                label: '订单 #12347', 
                                nodes: ['下单', '支付', '发货', '配送', '签收'],
                                currentStep: 1,
                                status: 'paused',
                                statusText: '待支付'
                            }
                        ]
                    },
                    {
                        id: 3,
                        title: '学习路线',
                        defaultExpanded: false,
                        items: [
                            { 
                                id: 1, 
                                label: 'Vue 3 全栈', 
                                nodes: ['基础', '进阶', '实战', '源码'],
                                currentStep: 2,
                                status: 'running',
                                statusText: '学习中'
                            },
                            { 
                                id: 2, 
                                label: 'TypeScript', 
                                nodes: ['入门', '类型系统', '高级特性'],
                                currentStep: 1,
                                status: 'running',
                                statusText: '学习中'
                            },
                            { 
                                id: 3, 
                                label: 'Node.js', 
                                nodes: ['基础', '进阶'],
                                currentStep: 0,
                                status: 'pending',
                                statusText: '待开始'
                            }
                        ]
                    }
                ]);

                return {
                    cards
                };
            }
        }).mount('#app');
    </script>
</body>
