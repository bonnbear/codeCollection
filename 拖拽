  opacity: 0;
  transition: opacity 0.3s;
}

.delete-btn {
  position: absolute;
  top: 8px;
  left: 8px;
  width: 24px;
  height: 24px;
  background: #ff4444;
  color: white;
  border: none;
  border-radius: 50%;
  cursor: pointer;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 16px;
  opacity: 0;
  transition: all 0.3s ease;
  z-index: 2;
}

.delete-btn:hover {
  background: #ff0000;
  transform: scale(1.1);
}

.drag-item:hover .delete-btn,
.drag-item:hover .drag-handle {
  opacity: 1;
}

