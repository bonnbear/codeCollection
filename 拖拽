  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 16px;
  min-height: 120px;
  padding: 16px;
  background: #f8f9fa;
  border: 2px dashed #ccc;
  border-radius: 8px;
  transition: background 0.3s, border-color 0.3s;
  position: relative;
}

