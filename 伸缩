</style>
```

使用示例 `App.vue`:

```vue
<template>
  <div class="app-container">
    <CollapsibleCard
      v-for="card in cards"
      :key="card.id"
      :title="card.title"
      :items="card.items"
      :default-expanded="card.defaultExpanded"
    />
  </div>
</template>

<script setup>
import { ref } from 'vue';
import CollapsibleCard from './components/CollapsibleCard.vue';

const cards = ref([
  {
    id: 1,
    title: '项目开发流程',
    defaultExpanded: true,
    items: [
      { 
        id: 1, 
        label: '前端开发', 
        nodes: ['需求分析', '设计', '开发', '测试', '上线'],
        currentStep: 2,
        status: 'running',
        statusText: '进行中'
      },
      { 
        id: 2, 
        label: '后端开发', 
        nodes: ['架构设计', '接口开发', '联调', '部署'],
        currentStep: 1,
        status: 'running',
        statusText: '进行中'
      },
      { 
        id: 3, 
        label: 'UI设计', 
        nodes: ['原型', '视觉设计', '交互', '验收'],
        currentStep: 4,
        status: 'completed',
        statusText: '已完成'
      },
      { 
        id: 4, 
        label: '测试阶段', 
        nodes: ['单元测试', '集成测试', '压力测试'],
        currentStep: 0,
        status: 'pending',
        statusText: '待启动'
      }
    ]
  },
  {
    id: 2,
    title: '订单处理流程',
    defaultExpanded: false,
    items: [
      { 
        id: 1, 
        label: '订单 #12345', 
        nodes: ['下单', '支付', '发货', '配送', '签收'],
        currentStep: 3,
        status: 'running',
        statusText: '配送中'
      },
      { 
        id: 2, 
        label: '订单 #12346', 
        nodes: ['下单', '支付', '发货', '配送', '签收'],
        currentStep: 5,
        status: 'completed',
        statusText: '已完成'
      },
      { 
        id: 3, 
        label: '订单 #12347', 
        nodes: ['下单', '支付', '发货', '配送', '签收'],
        currentStep: 1,
        status: 'paused',
        statusText: '待支付'
      }
    ]
  }
]);
</script>

<style>
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

body {
  font-family: Arial, sans-serif;
  background: #f5f5f5;
}

